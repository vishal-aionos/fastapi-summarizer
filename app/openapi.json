{
  "openapi": "3.0.0",
  "info": {
    "title": "Company Summarizer API",
    "version": "1.0.0"
  },
  "paths": {
    "/summarize": {
      "get": {
        "summary": "Get summary for a given company",
        "parameters": [
          {
            "name": "company",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Summary of the company",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
