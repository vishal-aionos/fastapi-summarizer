{
    "openapi": "3.0.0",
    "info": {
      "title": "Company Summarizer API",
      "version": "1.0.0"
    },
    "paths": {
      "/summarize": {
        "get": {
          "summary": "Get company earnings report summary",
          "parameters": [
            {
              "name": "company",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully fetched the company summary",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "summary": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  